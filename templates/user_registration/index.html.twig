                    <div class="m-login__signin">
                        <div class="m-login__head">
                            <h3 class="m-login__title">Sign Up</h3>
                            <div class="m-login__desc">Enter your details to create your account:</div>
                        </div>

                        <div class="form-group m-form__group">
                            {{ form_errors(userRegisterForm.firstName) }}
                            {{ form_label(userRegisterForm.firstName) }}
                            <span style="color: #ff2b5d">{{ form_errors(userRegisterForm.firstName) }}</span>
                            {{ form_widget(userRegisterForm.firstName) }}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_errors(userRegisterForm.lastName) }}
                            {{ form_label(userRegisterForm.lastName) }}
                            <span style="color: #ff2b5d">{{ form_errors(userRegisterForm.lastName) }}</span>
                            {{ form_widget(userRegisterForm.lastName) }}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_errors(userRegisterForm.email) }}
                            {{ form_label(userRegisterForm.email) }}
                            <span style="color: #ff2b5d">{{ form_errors(userRegisterForm.email) }}</span>
                            {{ form_widget(userRegisterForm.email) }}
                        </div>
                        <div class="form-group m-form__group">
                            {% if form_errors(userRegisterForm.password.first) %}
                                <span style="color: #ff2b5d">{{ form_errors(userRegisterForm.password.first) }}</span>
                                {{ form_widget(userRegisterForm.password.first, {attr: {class: 'form-control'}}) }}
                            {% else %}
                                {{ form_label(userRegisterForm.password.first) }}
                                {{ form_widget(userRegisterForm.password.first, {attr: {class: 'form-control'}}) }}
                            {% endif %}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_label(userRegisterForm.password.second) }}
                            <span style="color: #ff2b5d">{{ form_errors(userRegisterForm.password.second) }}</span>
                            {{ form_widget(userRegisterForm.password.second, {attr: {class: 'form-control'}}) }}
                        </div>

                        <div class="m-login__form-action">
                            <button id="m_login_signup_submit"
                                    class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn">
                                Welcome to Lazi
                            </button>&nbsp;&nbsp;
                            <button id="m_login_signup_cancel"
