{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}

{% block stylesheets %}
{#    <link href="{{ asset('assets/bootstrap_toggle/css/bootstrap-toggle.min.css') }}" rel="stylesheet" type="text/css"/>#}
{% endblock %}


{% block content %}
    {% include '_includes/_header.html.twig' %}

    <div class="m-grid__item m-grid__item--fluid  m-grid m-grid--ver-desktop m-grid--desktop 	m-container m-container--responsive m-container--xxl m-page__container m-body">
        <div class="m-grid__item m-grid__item--fluid m-wrapper">

            {{ form_start(advertForm, { 'attr' : { 'class': 'm-form', 'id': 'adverForm' }}) }}

            <div>Dans quelle menu souhaitez-vous créer l'annonce ?</div>
            <div>{{ form_widget(advertForm.route) }}</div>

            <div>Titre de l'annonce sur la page d'accueil</div>
            <div>{{ form_widget(advertForm.title) }}</div>

            <div>Contenu sur page d'accueil</div>
            <div>{{ form_widget(advertForm.content) }}</div>

            {# SUBMIT #}
            <button type="submit" class="btn btn-primary">Soumettre</button>
            <button type="reset" class="btn btn-secondary">Réinitialiser</button>

            {{ form_widget(advertForm._token) }}
            {{ form_end(advertForm) }}

        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/demo/default/custom/crud/forms/widgets/summernote.js') }}"
            type="text/javascript"></script>
    <script src="{{ asset('assets/demo/default/custom/crud/forms/widgets/select2.js') }}"
            type="text/javascript"></script>
    <script src="{{ asset('/assets/bootstrap_toggle/js/bootstrap2-toggle.min.js') }}" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {
            $(".select2").select2(
                {placeholder: "*"}
            );
        });
    </script>
{% endblock %}