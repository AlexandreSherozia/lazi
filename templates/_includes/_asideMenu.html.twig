                <li class="m-menu__section ">
                    <h4 class="m-menu__section-text">{% if is_granted('ROLE_ADMIN') %}Admin{% else %}Utilisateur{% endif %}</h4>
                            

                    <i class="m-menu__section-icon flaticon-more-v2"></i>
                </li>

                {% if is_granted('ROLE_USER') %}

                    {# ENTREPRISE #}
                    <li class="m-menu__item  m-menu__item--submenu" aria-haspopup="true" m-menu-submenu-toggle="hover">
                        <a href="{{ path('advanced_search', {'entity': 'entreprise'}) }}" class="m-menu__link "><span class="m-menu__link-text">Entreprise</span><i class="m-menu__link-icon flaticon-presentation"></i></a>
                    </li>

                    {# CONTACTS #}
                    <li class="m-menu__item  m-menu__item--submenu" aria-haspopup="true" m-menu-submenu-toggle="hover">
                        <a href="{{ path('advanced_search', {'entity': 'contact' }) }}" class="m-menu__link "><span class="m-menu__link-text">Contact</span><i class="m-menu__link-icon flaticon-avatar"></i></a>
                    </li>

                    {# SYNDICATS #}
                    <li class="m-menu__item  m-menu__item--submenu" aria-haspopup="true" m-menu-submenu-toggle="hover">
                        <a href="{{ path('advanced_search', {'entity': 'syndicat' }) }}" class="m-menu__link "><span class="m-menu__link-text">Syndicat</span><i class="m-menu__link-icon flaticon-network"></i></a>
