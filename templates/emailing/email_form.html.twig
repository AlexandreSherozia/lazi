{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Emailing
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
          integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="{{ asset('assets/bootstrap_toggle/css/bootstrap-toggle.min.css') }}" rel="stylesheet" type="text/css"/>
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="m-login__logo text-center">
            <a href="javascript:">
                <img src="{{ asset('ffcb_logo/ffcb.png') }}">
            </a>
        </div>


        <div class="m-portlet__body">
            <fieldset class="col-lg-12 ffcb-selector-border" style="background-color: #ffffff; padding-left: 0;">
                <legend class="col-lg-2">{{ "FFCB mailer"|upper }} </legend>

                <div class="row">

                    <div class="col-lg-2">{# ASIDE LEFT MENU #}
                        <a href="javascript:">
                            <img src="{{ asset('ffcb_logo/ffcb.png') }}"
                                 style="display: block; width: 80px; margin-left: 30px;">
                        </a>
                        <div class="m-section__content" style="border-right: 1px solid #f2f3f8">
                            <table class="table m-table m-table--head-bg-success">
                                <thead>
                                <tr>
                                    <th class="flaticon-email-black-circular-button" style="font-size: 1.2em"> Menu
                                        options
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>
                                        {% if models == 'creation' %}
                                            <a href="javascript:" data-toggle="modal"
                                               data-target="#m_modal_4">Modèles</a>
                                            <span id="count_models" style="border: 1px solid yellow;
                                                border-radius: 50%;width: 25px;height: 23px; display: inline-block; padding-left: 6px; margin-left: 10px;">
                                                {{ modelsListCount }}
                                            </span>
                                        {% elseif models == 'history' %}
                                            <a href="{{ http_referer }}">Revenir <span class="flaticon-reply"></span></a>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        {% if models == 'creation' %}
                                            <a href="{{ path('emailing_history') }}">Historique des envois</a>
                                        {% endif %}
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                            {# MODAL #}
                            <div class="modal fade" id="m_modal_4" tabindex="-1" role="dialog"
                                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modèles sauvegardés</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">

                                            <table class="m-datatable" id="html_table" width="100%"
                                                   style="margin: auto">
                                                <thead>
                                                <tr>
                                                    <th>Objet</th>
                                                    <th>Contenu</th>
                                                    <th>Auteur</th>
                                                    <th>Actions</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for messenger in modelsList %}
                                                    <tr class="{{ messenger.id }}">
                                                        <td>
                                                            <p class="loaded_model_{{ messenger.id }}">
                                                                {{ messenger.messageHeader }}
                                                            </p>
                                                        </td>
                                                        <td>
                                                            <article class="loaded_model_{{ messenger.id }}">
                                                                {{ messenger.messageBody|raw }}
                                                            </article>
                                                        </td>
                                                        <td>{{ messenger.senderName }}</td>
                                                        <td>
                                                            <div class="row">
                                                                <button class="loaded_model_{{ messenger.id }}">
                                                                    Charger
                                                                </button>
                                                                <div class="selection-btn">
                                                                    <a href="javascript:" class="{{ messenger.id }}"
                                                                       data-btn="{{ messenger.id }}">
                                                                        <span class="flaticon-delete"
                                                                              style="color: red; margin-left: 40px;"></span>
                                                                    </a>
                                                                </div>

                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {# end MODAL #}
                        </div>
                    </div>

                    <div class="col-lg-10">{# SENDING MAIN MENU #}
                        {% if models == 'history' %}
                            {% include '_includes/mail/mailing_history.html.twig' %}
                        {% elseif models == 'creation' %}
                            {% include '_includes/mail/create_mail.html.twig' %}
                        {% endif %}
                    </div>

                </div>
            </fieldset>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/bootstrap_toggle/js/bootstrap-toggle.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/app/js/listeContactsDatatables.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/demo/default/custom/crud/forms/widgets/summernote.js') }}"
            type="text/javascript"></script>
    <script src="{{ asset('assets/app/js/ajax-request-emails.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/demo/default/custom/crud/forms/widgets/select2.js') }}"
            type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            $(".select2").select2(
                {placeholder: "Rajouter des destinataires"}
            );
        });
    </script>
{% endblock %}
