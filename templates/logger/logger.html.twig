{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} historique événements
{% endblock %}

{% block content %}
    <div class="container">
        <div class="m-login__logo text-center">
            <a href="javascript:">
                <img src="{{ asset('ffcb_logo/ffcb.png') }}">
            </a>
        </div>

        <div class="m-content" style="margin-top: 40px">

            <div class="m-portlet m-portlet--mobile">
                {# MENU . . . HOVER DE DROITE #}
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                {{ 'historique des événements'|upper }}
                            </h3>
                        </div>
                    </div>

                </div>
                {# !-- end MENU . . . HOVER DE DROITE #}


                {# BODY DATATABLE #}
                <div class="m-portlet__body">

                    <!--begin: Search Form -->
                    <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                        <div class="row align-items-center">
                            <div class="col-xl-8 order-2 order-xl-1">
                                <div class="form-group m-form__group row align-items-center">

                                    <div class="col-md-4">
                                        <div class="m-input-icon m-input-icon--left">
                                            <input type="text" class="form-control m-input" placeholder="Search..." id="generalSearch">
                                            <span class="m-input-icon__icon m-input-icon__icon--left">
															<span><i class="la la-search"></i></span>
														</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <!--end: Search Form -->

                    <!--begin: Datatable -->
                    <table class="m-datatable" id="html_table" width="100%" style="margin: auto">
                        <thead>
                        <tr>
                            <th title="Field #2" data-field="Owner">Nom entité</th>
                            <th title="Field #2" data-field="Contact">Nom objet</th>
                            <th title="Field #2" data-field="Status">Action</th>
                            <th>Auteur</th>
                            <th title="Field #8" data-field="OrderDate">Date et heure</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for log in history %}
                            <tr>
                                {#2#}<td>{{ log.entityName }}</td>
                                {#8#}<td>{{ log.objectName }}</td>
                                {#9#}<td>{{ log.action }}</td>
                                {#9#}<td>{{ log.sender }}</td>
                                     <td>{{ log.datetime|date }}</td>


                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>

                    <!--end: Datatable -->
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('assets/app/js/loggerDatatable.js') }}" type="text/javascript"></script>

{% endblock %}




